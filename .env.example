JWT_REFRESH_SECRET=pon_aqui_otra_clave_larga_y_unica
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# === Opcional para seeding/admin ===
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=CambiaEstaPasswordFuerte123!
